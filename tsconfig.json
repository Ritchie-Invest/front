{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": [
      "ESNext"
    ],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "config": [
        "./tamagui.config.ts"
      ]
    }
  },
  "include": [
    "src",
    "tamagui.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
