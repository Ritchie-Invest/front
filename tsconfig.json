{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ],
}